all: installed

VERSION = 3.2
TARBALL = build/OpenMesh-$(VERSION).tar.gz
TARBALL_URL = http://www.openmesh.org/media/Releases/$(VERSION)/OpenMesh-$(VERSION).tar.gz
SOURCE_DIR = build/OpenMesh-$(VERSION)
UNPACK_CMD = tar xzf

include $(shell rospack find mk)/download_unpack_build.mk

installed: $(SOURCE_DIR)/unpacked
	cd $(SOURCE_DIR) && rm -rf build && mkdir -p build
	cd $(SOURCE_DIR)/build && cmake .. -DCMAKE_BUILD_TYPE=Release -DBUILD_APPS=OFF -DCMAKE_INSTALL_PREFIX=`catkin_find --first-only libopenmesh`/
	cd $(SOURCE_DIR)/build && make && make install
clean:
	rm -rf common $(SOURCE_DIR) $(TARBALL)
wipe: clean
	-rm -rf build


